@model LojaRemastered.Models.Cart

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Meu Carrinho</h2>
        <h4 class="text-primary">Saldo: @ViewBag.UserBalance.ToString("C")</h4>
    </div>

    @if (Model.Items.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Produto</th>
                        <th>Preço Unitário</th>
                        <th>Quantidade</th>
                        <th>Total</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.Quantity</td>
                            <td>@item.TotalPrice.ToString("C")</td>
                            <td>
                                <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">Remover</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded shadow-sm">
            <h3 class="text-primary">Total: @Model.TotalPrice.ToString("C")</h3>
            <div>
                <form asp-action="ClearCart" method="post" class="d-inline">
                    <button type="submit" class="btn btn-warning">Limpar Carrinho</button>
                </form>
                <a asp-action="Checkout" class="btn btn-success ms-2">Finalizar Compra</a>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center shadow-sm" role="alert">
            <h4>Seu carrinho está vazio.</h4>
            <p>Que tal adicionar algo agora?</p>
            <a class="btn btn-outline-info" asp-area="" asp-controller="Products" asp-action="Store">Ver produtos</a>
        </div>
    }
</div>
