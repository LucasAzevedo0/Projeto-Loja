@model IEnumerable<LojaRemastered.Models.Transaction>

<div class="container my-4">
    <h2 class="mb-3 text-primary fw-bold">@ViewData["Title"]</h2>
    <div class="card p-3 shadow-sm mb-4">
        <p class="lead mb-0 text-center">
            <strong>Seu saldo atual:</strong>
            <span class="badge bg-success fs-5">@ViewBag.CurrentBalance.ToString("C")</span>
        </p>
    </div>

    <!-- Botão para depositar fundos -->
    <div class="text-center mb-4">
        <a class="btn btn-outline-primary btn-lg px-4" asp-area="" asp-controller="Transactions" asp-action="Deposit">💰 Depositar Fundos</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Data</th>
                        <th>Tipo</th>
                        <th>Valor</th>
                        <th>Saldo Após</th>
                        <th>Usuário Relacionado</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model)
                    {
                        <tr>
                            <td>@transaction.TransactionDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="fw-bold">@transaction.TransactionType</td>
                            <td class="fs-5">@transaction.Amount.ToString("C")</td>
                            <td class="text-muted">@transaction.BalanceAfterTransaction.ToString("C")</td>
                            <td>@transaction.RelatedUserName</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@transaction.Id" class="btn btn-outline-secondary btn-sm">🔍 Detalhes</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center fw-bold shadow-sm">📜 Não há transações registradas.</div>
    }
</div>
