@{
    ViewData["Title"] = "Depositar Fundos";
}

<div class="container my-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold">@ViewData["Title"]</h2>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }

    <div class="card shadow-sm p-4 mx-auto" style="max-width: 400px; border-radius: 12px;">
        <form asp-controller="Transactions" asp-action="Deposit" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="amount" class="form-label fw-bold">💰 Valor a depositar</label>
                <input type="number" class="form-control text-center" id="amount" name="amount" step="0.01" required
                       style="font-size: 1.2rem; border-radius: 8px;" />
            </div>
            <button type="submit" class="btn btn-success w-100" style="font-size: 1.1rem; border-radius: 8px;">📩 Depositar</button>
        </form>
    </div>
</div>


