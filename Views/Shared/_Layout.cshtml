<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LojaRemastered</title>
    
    <link rel="stylesheet" href="https://bootswatch.com/5/pulse/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LojaRemastered.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Projeto Loja</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 text-light">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Store"> 🛍️ Loja</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index"> 🛒 Meu Carrinho</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                📦 Área do Vendedor
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="MyProducts">Meus Produtos</a></li>
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Create">Cadastrar Produto</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Transactions" asp-action="History">💰 Histórico Financeiro</a>
                        </li>
                    </ul>


                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; @DateTime.Now.Year - Projeto Loja - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <style>
        /* Hover bonito */
        .navbar-nav .nav-link {
            position: relative;
            transition: color 0.3s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                color: #ffdd57 !important; /* Cor ao passar o mouse */
            }

            /* Linha animada abaixo do item ativo */
            .navbar-nav .nav-link.active {
                color: #ffdd57 !important;
                font-weight: bold;
            }

                .navbar-nav .nav-link.active::after {
                    content: '';
                    position: absolute;
                    left: 0;
                    bottom: -3px;
                    width: 100%;
                    height: 3px;
                    background-color: #ffdd57;
                    transition: width 0.3s ease-in-out;
                }
    </style>

    <script>
                document.addEventListener("DOMContentLoaded", function () {
            const navLinks = document.querySelectorAll(".nav-link:not(.dropdown-toggle)"); // Exclui dropdowns
            const currentPath = window.location.pathname;

            navLinks.forEach(link => {
                // Verifica se o HREF corresponde exatamente ao caminho da página
                if (link.getAttribute("href") === currentPath) {
                    link.classList.add("active");
                }
            });
        });

    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
