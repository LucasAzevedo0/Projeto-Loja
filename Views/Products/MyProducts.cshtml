@model IEnumerable<LojaRemastered.Models.Product>

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Meus Produtos</h2>
        <a class="btn btn-primary shadow-sm" asp-area="" asp-controller="Products" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Vender Novo Produto
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            Você ainda não anunciou nenhum produto.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Estoque</th>
                        <th>Data do Anúncio</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@product.Name</td>
                            <td class="text-success">@product.Price.ToString("C")</td>
                            <td>@product.Stocks</td>
                            <td>@product.DataAnuncio.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning me-2">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
@functions {
    string GetStockStatus(int stock)
    {
        return stock switch
        {
            > 1 => "in-stock",
            > 0 => "low-stock",
            _ => "out-of-stock"
        };
    }
}
@section Scripts {
    <script>
        // Submit automático quando alterar filtros
        document.querySelectorAll('select[name="statusFilter"], select[name="sortOrder"]').forEach(select => {
            select.addEventListener('change', function() {
                this.form.submit();
            });
        });
    </script>
}